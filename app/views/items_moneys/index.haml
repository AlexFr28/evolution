.index-item-money
  .grid.row
    = link_to image_tag("more.png", alt: 'icone plus'), new_statement_path, class: "button_more", title: "Créer un bilan"
    .submenu
      - @items_moneys.each do |item_money|
        = link_to item_money.name, item_money.link.to_sym, class: 'sub'
  %br
  .statements
    .panel
      .panel-heading
        .panel-title
          %h1 Mes derniers bilans
      .panel-body
        - @bilans.keys.each do |date|
          .block
            .statement= link_to date, statement_path(date)
            .value= "%.2f€" % @bilans[date]

  / = line_chart @bilans
  